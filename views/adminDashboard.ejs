<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>RojakSquad - Reference App</title>
        <!-- Favicon-->
        <link rel="icon" type="image/png" sizes="96x96" href="static/assets/favicon/favicon-96x96.png">
        <!-- Bootstrap Icons-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
        <!-- SimpleLightbox plugin CSS-->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/SimpleLightbox/2.1.0/simpleLightbox.min.css" rel="stylesheet" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link rel="stylesheet" href="css/style.css">
        <!-- DataTables CDN -->
        <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>
    </head>
    
    <body class="bg-home" id="page-home" style="padding: 2rem;">
            
                    <table class="table table-striped" id="referencesTable" style="padding: 1rem;">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Summary</th>
                                <th>Date</th>
                                <th>ImgURL</th>
                                <th>Url</th>
                            </tr>
                        </thead>
                    </table>

                    <a href="/">Logout</a>

                    <div style="display: flex; flex-direction: column; align-items: center; margin-top: 5rem; padding-bottom: 2rem;">
                        <h2 style="margin-bottom: 2rem;">Upload your references!</h2>
                        <form style="display: flex; flex-direction: column; justify-content: space-between; height: 350px; width: 400px;" action="/auth/createReference" method="post">
                            <input type="text" name="title" placeholder="Reference Title">
                            <textarea name="summary" id="" cols="30" rows="10" placeholder="Reference Summary"></textarea>
                            <input type="date" name="date">
                            <input type="text" name="imgUrl" placeholder="Reference Image Url">
                            <input type="text" name="url" placeholder="Reference Url">
                            <button type="submit" style="width: 200px; align-self: flex-end;">Create reference</button>
                        </form>
                    </div>

                    <div style="display: flex; flex-direction: column; align-items: center; margin-top: 5rem; padding-bottom: 2rem;">
                        <h2 style="margin-bottom: 2rem;">Delete your references!</h2>
                        <form style="display: flex; flex-direction: column; justify-content: space-between; height: 80px; width: 400px;" action="/auth/deleteReference" method="post">
                            <input type="text" name="title" placeholder="Reference Title">
                            <button type="submit" style="width: 200px; align-self: flex-end;">Delete reference</button>
                        </form>
                    </div>

                    <div style="display: flex; flex-direction: column; align-items: center; margin-top: 5rem; padding-bottom: 2rem;">
                        <h2 style="margin-bottom: 2rem;">Edit your references!</h2>
                        <form style="display: flex; flex-direction: column; justify-content: space-between; height: 350px; width: 400px;" action="/auth/updateReference" method="post">
                            <input type="text" name="title" placeholder="Reference Title">
                            <textarea name="summary" id="" cols="30" rows="10" placeholder="Update Reference Summary"></textarea>
                            <input type="text" name="imgUrl" placeholder="Update Reference Image Url">
                            <input type="text" name="url" placeholder="Reference Url">
                            <button type="submit" style="width: 200px; align-self: flex-end;">Edit reference</button>
                        </form>
                    </div>
                    

         <script>
            $(document).ready( function () {
                $('#referencesTable').DataTable( {
                    pageLength : 3,
                    autoWidth: false,
                    ajax: {
                        url: 'http://localhost:3000/auth/createReference',
                        dataSrc: ''
                    },
                    columns: [
                        {data: 'title'},
                        {data: 'summary'},
                        {data: 'date'},
                        {data: 'imgUrl'},
                        {data: 'url'}
                    ]
                } );
            } );

         </script>

        <script src="/reload/reload.js"></script>
    </body>
</html>
    